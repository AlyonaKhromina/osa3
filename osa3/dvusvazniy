#include<vector>
#include<iostream>
#include<list>
#include<iterator>
#include<string>
#include<iterator>
#include<Windows.h>

using namespace std;

class Marks {
private:
    vector<int> marks;

public:
    void add(int mark) {
        marks.push_back(mark);
    }

    vector<int> get() {
        return marks;
    }

    float avg() {
        float sum = 0;
        for (int i = 0; i < marks.size(); i++) {
            sum += marks[i];
        }
        return sum / marks.size();
    }

    int size() {
        return marks.size();
    }
};

class character {
private:
    string name;
    Marks marks;
public:
    character(string name, Marks marks) {
        this->name = name; this->marks = marks;
    }
    character() { name = ""; }

    character get_person() {
        return *this;
    }

    string get_name() {
        return name;
    }

    Marks get() {
        return marks;
    }
};

struct strct {
    character p;
    strct* prev, * next;
};

class List {
private:
    strct* first, * last;
public:
    List() {
        first = nullptr;
        last = nullptr;
    }

    void add_back(character p) {
        strct* p4l = new strct;
        p4l->p = p;
        p4l->prev = last;
        p4l->next = nullptr;
        if (last != nullptr) {
            last->next = p4l;
        }
        last = p4l;
        if (first == nullptr) {
            first = p4l;
        }
    }

    void add_front(character p) {
        strct* p4l = new strct;
        p4l->p = p;
        p4l->prev = nullptr;
        p4l->next = first;
        if (first != nullptr) {
            first->prev = p4l;
        }
        first = p4l;
        if (last == nullptr) {
            last = p4l;
        }
    }

    bool addAfter(character p, int index) {
        strct* current = first;
        for (; index > 0 && current != nullptr; index--) {
            current = current->next;
        }
        if (current == nullptr) { return false; }
        strct* p4lNew = new strct;
        p4lNew->p = p;
        p4lNew->next = current->next;
        p4lNew->prev = current;
        current->next = p4lNew;
        return true;
    }

    bool remove_back() {
        strct* p4l;
        if (last == nullptr) {
            return false;
        }
        p4l = last->prev;
        if (p4l != nullptr) {
            p4l->next = nullptr;
        }
        else {
            first = nullptr;
        }
        delete(last);
        last = p4l;
        return true;
    }

    bool remove_front() {
        strct* p4l;
        if (first == nullptr) {
            return false;
        }
        p4l = first->next;
        if (p4l != nullptr) {
            p4l->prev = nullptr;
        }
        else {
            last = nullptr;
        }
        delete(first);
        first = p4l;
        return true;
    }

    vector<int> searchByName(string name) {
        vector<int> v;
        strct* current = first;
        for (int i = 0; current != nullptr; i++) {
            if (current->p.get_name() == name) {
                v.push_back(i);
            }
            current = current->next;
        }
        return v;
    }

    character getItem(int index) {
        strct* current = first;
        for (; index > 0; index--) {
            current = current->next;
        }
        if (current == nullptr) {
            character p;
            return p;
        }
        return current->p;
    }
};

character creator() {
    Marks marks;
    int mark;
    while (1) {
        string name;
        cout << "Введите оценку (0 для прекращения ввода оценок): ";
        cin >> mark;
        if (mark == 0) {
            cout << "Введите имя: ";
            cin >> name;
            cout << endl;
            character p(name, marks);
            strct p4l;
            p4l.p = p;
            return (p);
        }
        marks.add(mark);
    }
}

void printV(vector<int> v) {
    for (int i = 0; i < v.size(); i++) {
        cout << v[i] << " ";
    }
    cout << endl << endl;
}

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int temp;
    List data;
    while (1) {
        cout << "Введите номер работы: ";
        cin >> temp;
        switch (temp) {
        case 1:
            data.add_back(creator());
            break;
        case 2:
            data.add_front(creator());
            break;
        case 3:
            data.remove_back();
            break;
        case 4:
            data.remove_front();
            break;
        case 5:
        {
            character p;
            for (int i = 0; data.getItem(i).get_name() != ""; i++) {
                cout << data.getItem(i).get_name() << ", Ср. Оценка: "
                    << data.getItem(i).get().avg() << endl;
                printV(data.getItem(i).get().get());
            }
        }
        break;
        case 6:
        {
            char yes_or_not;
            vector<int> v;
            cout << "Введите имя: ";
            string name;
            cin >> name;
            v = data.searchByName(name);
            character p;
            for (vector<int>::iterator iterator = v.begin(); iterator != v.end(); iterator++) {
                p = data.getItem(*iterator);
                cout << p.get_name() << ", Ср. Оценка: " << p.get().avg() << endl;
                cout << "Вставить новый элемент? (y/n)";
                cin >> yes_or_not;
                if (yes_or_not == 'y') {
                    data.addAfter(creator(), *iterator);
                }
            }
        }
        break;
        case 7:
            return 0;
        }
    }
}
